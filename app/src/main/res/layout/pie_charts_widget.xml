<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Calco.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Calco.AppWidgetContainer">

    <LinearLayout
        android:id="@+id/widget_calories_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:gravity="center" >
        <ImageView
            android:id="@+id/widget_calories"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_carbs_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/widget_calories_container"
        android:layout_marginEnd="10dp"
        android:gravity="center" >
        <ImageView
            android:id="@+id/widget_carbs"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crabs" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_fats_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/widget_carbs_container"
        android:layout_marginEnd="10dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/widget_fats"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fats" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_proteins_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/widget_fats_container"
        android:layout_marginEnd="10dp"
        android:gravity="center" >
        <ImageView
            android:id="@+id/widget_proteins"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proteins" />
    </LinearLayout>
</RelativeLayout>