<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/searching_result_record_ccfp_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/searching_result_record_name" />
        <TableRow>
            <TextView
                android:text="Calories"
                android:gravity="center"/>
            <TextView
                android:text="Carbs"
                android:gravity="center"/>
            <TextView
                android:text="Fats"
                android:gravity="center"/>
            <TextView
                android:text="Proteins"
                android:gravity="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/searching_result_record_calories"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="0g"/>
            <TextView
                android:id="@+id/searching_result_record_carbs"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="0g"/>
            <TextView
                android:id="@+id/searching_result_record_fats"
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="0g"/>
            <TextView
                android:id="@+id/searching_result_record_proteins"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="0g"/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>