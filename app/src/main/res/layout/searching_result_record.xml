<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/searching_result_record_ccfp_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TableRow
            android:background="@drawable/table_record_odd_bg">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"/>
            <TextView
                android:text="Calories"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"/>
            <TextView
                android:text="Carbs"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"/>
            <TextView
                android:text="Fats"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"/>
            <TextView
                android:text="Proteins"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:id="@+id/searching_result_record_data"
            android:background="@drawable/table_record_even_bg"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/searching_result_record_name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"/>
            <TextView
                android:id="@+id/searching_result_record_calories"
                android:text="0g"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"/>
            <TextView
                android:id="@+id/searching_result_record_carbs"
                android:text="0g"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"/>
            <TextView
                android:id="@+id/searching_result_record_fats"
                android:text="0g"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"/>
            <TextView
                android:id="@+id/searching_result_record_proteins"
                android:text="0g"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
